{% extends 'layout.html.twig' %}

{% block title %}Register! {% endblock %}

{% block content %}
    <div class="text-center mt-3">
      <img src="{{ asset('photos/typo2.png')}}" alt="logo"></div>
    <div  class="form mx-auto border border-primary rounded p-4 mt-5 ">
    <h1 class="text-center mt-3">INSCRIVEZ-VOUS</h1>

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.adresse)}}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de Passe'
        }) }}
        
        <a href="{{path('app_cgu')}}">{{ form_row(registrationForm.accepterLesConditionsGenerales)}}</a>

        <button type="submit" class="btn btn-dark text-light my-3">S'enregistrer</button>
    {{ form_end(registrationForm) }}
    </div>

{% endblock %}
